<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/setting_text_size"
        android:text="Location Name"
        android:textColor="@color/primary_text"
        android:id="@+id/location_name"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/secondary_text"
        android:textSize="@dimen/setting_text_secondary"
        android:text="Location Address"
        android:id="@+id/location_addr"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/get_map_location"
        android:text="Change Map Location"
        android:layout_marginBottom="@dimen/app_settings_padding"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/primary_text"
        android:textSize="@dimen/setting_text_size"
        android:text="Zoom" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/map_zoom"
        android:layout_gravity="center_horizontal"
        android:max="14"
        android:layout_marginBottom="@dimen/app_settings_padding"/>

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Traffic"
        android:id="@+id/map_traffic"
        android:layout_gravity="center_horizontal"
        android:checked="false"
        android:textSize="@dimen/setting_text_size"
        android:textColor="@color/primary_text"/>
</LinearLayout>