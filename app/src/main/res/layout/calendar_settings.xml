<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.silver.dan.castdemo.settingsFragments.SettingItem
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <Switch
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Display events from all calendars"
                    android:id="@+id/display_all_calendars"
                    android:checked="true"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/setting_text_size"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/calendar_list"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    xmlns:tools="http://schemas.android.com/tools"
                    tools:listitem="@layout/calendar_select"
                    android:layout_marginBottom="@dimen/app_settings_padding"/>

            </LinearLayout>
        </com.silver.dan.castdemo.settingsFragments.SettingItem>
        <include layout="@layout/setting_line_break"/>

        <com.silver.dan.castdemo.settingsFragments.SettingItem
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Switch
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Display event locations"
                android:textSize="@dimen/setting_text_size"
                android:id="@+id/display_event_locations"/>
        </com.silver.dan.castdemo.settingsFragments.SettingItem>

        <include layout="@layout/setting_line_break"/>
        <com.silver.dan.castdemo.settingsFragments.SettingItem
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/show_events_until">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/setting_text_size"
                    android:textColor="@color/primary_text"
                    android:text="Calendar Duration"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/secondary_text"
                    android:textSize="@dimen/setting_text_secondary"
                    android:text="3 months"
                    android:id="@+id/calendar_duration_text"/>
            </LinearLayout>
        </com.silver.dan.castdemo.settingsFragments.SettingItem>

    </LinearLayout>
</ScrollView>